<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.openeos.activiti.integration</artifactId>
	<packaging>bundle</packaging>
	<parent>
		<groupId>org.openeos</groupId>
		<artifactId>org.openeos.modules</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<configuration>
					<instructions>
						<Bundle-SymbolicName>${pom.artifactId}</Bundle-SymbolicName>
						<Bundle-RequiredExecutionEnvironment>JavaSE-1.6</Bundle-RequiredExecutionEnvironment>
						<Liquibase-FilterDataSource>(osgi.jndi.service.name=unoDataSource)</Liquibase-FilterDataSource>
						<Require-Capability>osgi.extender;filter:="(osgi.extender=org.openeos.liquibase)"</Require-Capability>

						<Require-Bundle>com.springsource.org.aspectj.runtime,
							org.springframework.aspects,org.drools.persistence-jpa,org.drools.core,
							org.drools.api,org.drools.drools-spring</Require-Bundle>
						<Uno-Model-Classes>org.openeos.jbpm.integration.model.DroolsSession,org.openeos.jbpm.integration.model.JbpmProcessInstance,org.openeos.jbpm.integration.model.JbpmProcessInstanceEventType,org.openeos.jbpm.integration.model.WorkItem</Uno-Model-Classes>
						<Import-Package>!org.drools.*,!net.sourceforge.cobertura.*,!org.osgi.service.blueprint,org.hibernate.proxy,javassist.util.proxy,*</Import-Package>
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>aspectj-maven-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>org.liquibase</groupId>
				<artifactId>liquibase-maven-plugin</artifactId>
				<version>2.0.1</version>
				<configuration>
					<changeLogFile>src/main/resources/OSGI-INF/liquibase/liquibase_jbpm_v0.xml</changeLogFile>
					<driver>org.postgresql.Driver</driver>
					<url>jdbc:postgresql:uno1</url>
					<username>frinconm</username>
					<password>.,mart1n</password>
				</configuration>
				<dependencies>
					<dependency>
						<groupId>postgresql</groupId>
						<artifactId>postgresql</artifactId>
						<version>9.1-901-1.jdbc4</version>
					</dependency>
				</dependencies>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>test-jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

